<%- include('partials/header') -%>
    <div class="container" style="margin-top: 5px;">
        <h2 class="text-center">Contact Form</h2>
        <form action="">
            <div class="form-floating mb-3">
                <label for="fullName">Full Name</label>
                <input type="text" class="form-control" id="fullName" name="fullName" placeholder="full name">
            </div>
            <div class="form-floating mb-3">
                <label for="phone">Phone Number</label>
                <input type="number" class="form-control" id="phone" name="phone" placeholder="Phone number">
            </div>
            <div class="form-floating mb-3">
                  <label for="email">Email address</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com">
            </div>
            <div class="form-floating mb-3">
                <label for="message">Message</label>
                <textarea class="form-control" placeholder="Leave a comment here" id="message" name="message"
                    style="height: 100px"></textarea>
            </div>
            <button type="submit" id="contact-submit-btn" class="btn btn-primary mb-3" style="margin-top: 10px; margin-bottom: 10px;" >Send Form</button>
        </form>
    </div>

    <%- include('partials/footer') -%>